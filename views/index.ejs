<!DOCTYPE html>
<html lang="en">
    <%- include('./includes/head', {title: "Home"}) %>
<body> 
    <h1>Actions:</h1>
    <a class="button" href="/upload">Upload a file</a>
    <h1>Files:</h1>
<ul>
    <% files.forEach(file => { %>
        <li>
            <a href="/uploads/<%= file %>" download="<%= file %>"><%= file %></a>
        </li>
    <% }) %>
</ul>
</body>
</html>